<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mm_22"
        android:layout_marginLeft="@dimen/mm_22"
        android:gravity="center"
        android:orientation="vertical">


        <com.tom.commonframework.widget.NiceImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/mm_150"
            android:layout_height="@dimen/mm_150"
            app:border_width="@dimen/mm_2"
            app:border_color="@color/C_EBEBEB"
            app:corner_radius="@dimen/mm_20"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mm_14"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="@color/C_333333"
            android:textSize="@dimen/mm_30"
            tools:text="成安意" />


        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mm_8"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="5"
            android:singleLine="true"
            android:textColor="@color/C_626262"
            android:textSize="@dimen/mm_20"
            tools:text="主人" />

    </LinearLayout>


</RelativeLayout>